<form class="form-horizontal" role="form" id="form">

<div class="row">
    <div class="col-xs-12">
        <table id="table" class="table table-striped table-bordered table-hover" width="100%">
            <thead>
                <tr>
                    <th class="center">放款ID</th>
                    <th class="center">姓名</th>
                    <th class="center">身份证号</th>
                    <th class="center">银行卡号</th>
                    <th class="center">放款金额（元）</th>
                    <th class="center">放款时间</th>
                    <th class="center">状态</th>
                </tr>
            </thead>

            <tbody>

            </tbody>
        </table>
    </div><!-- /.span -->
</div><!-- /.row -->
</form>
<!-- page specific plugin scripts -->
<script>
    var table;
    $(document).ready(function() {
        table = $('#table').DataTable( {
            "processing": true,
            "lengthChange": false,
            "filter": false,
            //开启服务器模式
            serverSide: true,
            //数据来源（包括处理分页，排序，过滤） ，即url，action，接口，等等
            ajax: "/biz/pay/list_data",
            columns: [
                { data: 'taskNo', className: 'center' },
                { data: 'name', className: 'center' },
                { data: 'idCardNo', className: 'center' },
                { data: 'bankCardNo', className: 'center' },
                { data: 'amount', className: 'center' },
                { data: 'createTime', className: 'center' },
                { data: 'status', className: 'center' }
            ]
        } );
    } );


    function search(){
        table.ajax.reload();
    }
</script>